{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "target": "es2022",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src",
    "eslint.config.ts",
    "jest.*.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}